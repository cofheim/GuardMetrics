{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Hangfire": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentName"
    ],
    "Properties": {
      "Application": "GuardMetrics"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "http://localhost:3000",
    "https://localhost:3000"
  ],
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=guardmetrics;Username=postgres;Password=your_password",
    "Redis": "localhost:6379",
    "HangfireConnection": "Host=localhost;Database=guardmetrics_hangfire;Username=postgres;Password=your_password"
  },
  "JWT": {
    "ValidAudience": "http://localhost:4200",
    "ValidIssuer": "http://localhost:5000",
    "Secret": "your_jwt_secret_key_here_minimum_16_characters",
    "TokenValidityInMinutes": 1440
  },
  "VirusTotal": {
    "ApiKey": "your_virustotal_api_key",
    "ApiUrl": "https://www.virustotal.com/vtapi/v2"
  },
  "Telegram": {
    "BotToken": "your_telegram_bot_token",
    "ChatId": "your_chat_id"
  },
  "MetricAnalysis": {
    "AnomalyDetectionThreshold": 0.95,
    "AnalysisIntervalMinutes": 5,
    "MaxSamplesPerAnalysis": 1000
  }
}
